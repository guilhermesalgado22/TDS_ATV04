@page "{id:int}"
@model tpte04.RazorPages.Pages.Cursos.Details

<h2>Alunos Inscritos</h2>

<div>
    <p><strong>Nome do curso:</strong> @Model.CursoModel.NomeCurso</p>

    @foreach (var alunoModel in Model.CursoModel.Alunos!)
    {
        <tr>
            <td>@Html.DisplayFor(model => alunoModel.IdAluno)</td>
            <td>@Html.DisplayFor(model => alunoModel.NomeAluno)</td>
            <br>
        </tr>
    }

</div>

